<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="@drawable/belakang">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".Halaman2">


        <TextView
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="157dp"
            android:layout_marginTop="55dp"
            android:text="Seblak Meledak"
            android:textColor="#FFFDFD"
            android:textSize="16dp" />

        <TextView
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="145dp"
            android:text="Sentanan Kec.Patianrowo"
            android:textColor="#F8F5F5"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="50dp"
            android:background="#AEAB00" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/berhasil"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#ffff"
            android:textSize="16dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/purple_700"
            android:layout_marginTop="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Total"
                android:textColor="#FDFDFD"
                android:id="@+id/total"
                android:textSize="16dp"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Discount"
                android:textColor="#F3F3F3"
                android:id="@+id/discount"
                android:textSize="16dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Total Belanja"
                android:textColor="#FFFFFF"
                android:id="@+id/belanja"
                android:textSize="16dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120dp"
            android:layout_marginTop="40dp"
            android:text="Terima Kasih"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />

        <TextView
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="95dp"
            android:layout_marginTop="10dp"
            android:text="Atas Kunjungan Anda di"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />

        <TextView
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="10dp"
            android:text="Seblak Meledak By Vannodi Raditya "
            android:textColor="#FFFFFF"
            android:textSize="12dp" />

    </LinearLayout>
</ScrollView>